@using Countersoft.Foundation.Commons.Extensions
<div id='@Model.Issue.Id' data-project-id="@Model.Issue.Entity.ProjectId" class='plan-card @Model.Color clearfix'><div class='card-options-icon'><span class='fonticon-arrow-down'></span></div><div class='plan-content left'><p class="title" title="@Model.Issue.Title"><strong>@Model.Issue.IssueKey:</strong> @Model.Issue.Title</p><p><strong>@GetResource("Version"):</strong>&nbsp;@Model.Issue.FixedInVersion</p><p><strong>@GetResource("Status"):</strong>&nbsp;@Model.Issue.Status</p><p><strong>@GetResource("Severity"):</strong>&nbsp;@Model.Issue.Severity</p><p title="@Model.Issue.ComponentNames">@Model.Issue.ComponentNames</p><p><strong>@GetResource("StartDate"):</strong>&nbsp;@if(Model.Issue.StartDate != null) { @Model.Issue.StartDate.ToShortDateString() }</p><p><strong>@GetResource("DueDate"):</strong>&nbsp;@if(Model.Issue.DueDate != null) { @Model.Issue.DueDate.ToShortDateString() }</p><p><strong>@GetResource("Points"):</strong>&nbsp;@Model.Issue.Points</p><p title="@Model.Issue.ResourceNames"><i>@Model.Issue.ResourceNames&nbsp;</i></p><div class='status'><div class='plan-icon-t@(Model.Issue.Entity.TypeId) left' title='@Model.Issue.Type'></div><div class='plan-icon-p@(Model.Issue.Entity.PriorityId) right' title='@Model.Issue.Priority' ></div></div><div class="percent" title="@Model.Issue.PercentComplete%"><div class="done" style="width:@Model.Issue.PercentComplete%;"></div></div><div class="complete clearfix"><p class="left"><strong>@(Model.Issue.EstimatedHours)h</strong>&nbsp;estimated</p><p class="right"><strong>@(Model.Issue.LoggedTime.Display)</strong>&nbsp;logged</p></div></div></div>